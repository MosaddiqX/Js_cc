{
	"name": "Enhanced Node.js Workspace",
	"image": "mcr.microsoft.com/devcontainers/javascript-node:1-22-bookworm",
	"features": {
		"ghcr.io/devcontainers-extra/features/jshint:2": {},
		"ghcr.io/devcontainers/features/git:1": {},
		"ghcr.io/devcontainers/features/github-cli:1": {}
	},
	"customizations": {
		"vscode": {
			"settings": {
				// Editor Customizations
				"workbench.editor.decorations.badges": false,
				"workbench.editor.highlightModifiedTabs": false,
				"workbench.startupEditor": "none",
				"workbench.activityBar.visible": true,
				"workbench.statusBar.visible": true,
				"workbench.sideBar.location": "right",
				"window.menuBarVisibility": "compact",
				"window.zoomLevel": 1,
				"window.titleBarStyle": "custom",
				"explorer.autoReveal": false,
				"explorer.compactFolders": false,
				"explorer.openEditors.visible": 1,

				// Editor Preferences
				"editor.fontFamily": "'Fira Code', 'JetBrains Mono', Menlo, Monaco, 'Courier New', monospace",
				"editor.fontLigatures": "'ss01', 'ss02', 'calt', 'dlig'",
				"editor.fontSize": 16,
				"editor.lineHeight": 28,
				"editor.smoothScrolling": true,
				"editor.renderWhitespace": "boundary",
				"editor.scrollBeyondLastLine": false,
				"editor.renderControlCharacters": false,
				"editor.tokenColorCustomizations": {
					"textMateRules": [
						{
							"scope": ["comment", "keyword", "variable.language"],
							"settings": { "fontStyle": "italic" }
						}
					]
				},

				// Formatting & Linting
				"editor.formatOnSave": true,
				"editor.defaultFormatter": "esbenp.prettier-vscode",
				"files.trimTrailingWhitespace": true,
				"files.insertFinalNewline": true,
				"files.autoSave": "onFocusChange",
				"[javascript]": {
					"editor.defaultFormatter": "esbenp.prettier-vscode"
				},
				"[json]": {
					"editor.defaultFormatter": "vscode.json-language-features"
				},

				// Terminal Customizations
				"terminal.integrated.fontSize": 14,
				"terminal.integrated.lineHeight": 1.2,
				"terminal.integrated.cursorStyle": "line",
				"terminal.integrated.fontFamily": "'Fira Code', monospace",

				// Visual Enhancements
				"editor.minimap.enabled": false,
				"editor.overviewRulerBorder": false,
				"breadcrumbs.enabled": false,
				"editor.lineNumbers": "relative",
				"editor.renderLineHighlight": "none",
				"workbench.editor.showTabs": "none",

				// Theme
				"workbench.colorTheme": "Catppuccin Latte",
				"workbench.iconTheme": "fluent-icons",
				"material-icon-theme.files.color": "#42a5f5"
			},
			"extensions": [
				"Catppuccin.catppuccin-vsc",
				"aleleba.fira-code-material-icon-theme",
				"esbenp.prettier-vscode",
				"xabikos.JavaScriptSnippets",
				"miguelsolorio.fluent-icons",
				"WallabyJs.quokka-vscode",
				"ms-vscode.vscode-typescript-next"
			]
		}
	},
	"postCreateCommand": "npm install",
	"forwardPorts": [],
	"remoteUser": "node"
}
